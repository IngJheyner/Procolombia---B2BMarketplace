{{ attach_library('cp_layout/cp_layout') }}
<div class="right_bar" id="right_messages" style="display:none ;opacity: 0;">
	<div class="tab-content">
		<div id="pills-chat" class="tab-pane active">
			<div>
				<div class="px-4 pt-0">
					<div class="d-flex align-items-center justify-content-end">
						<ul class="list-inline user-chat-nav text-end mb-0">
							<li class="list-inline-item d-none d-lg-inline-block">
								<a href="/messages">
									<div class="toltip_content m-0">
										<button type="button" id="hide-chat-nav" class="nav-btn user-profile-show btn btn-none toltip_i m-0">
											<i style="color:#005CA4 !important" class='bx bx-fullscreen text-white'></i>
											<span class="tooltiptext" style="width: 103px;font-size: 0.8rem;top: 80%;left: -124%;padding: 5px;">
												Minimizar chat
											</span>
										</button>
									</div>
								</a>
							</li>
							<li id="" class="list-inline-item d-none d-lg-inline-block">
								<div class="toltip_content m-0">
									<button type="button" id="close-sidebar" class="nav-btn user-profile-show btn btn-none toltip_i m-0">
										<i style="color:#005CA4 !important" class='bx bx-x text-white'></i>
										<span class="tooltiptext" style="width: 103px;font-size: 0.8rem;top: 80%;left: -124%;padding: 5px;">
											Salir
										</span>
									</button>
								</div>
							</li>
						</ul>
					</div>
					<div class="d-flex align-items-center justify-content-between">
						<h4 class="mb-3 chat-tittle">Mensajes</h4>
					</div>
					<div class="search-box chat-search-box">
						<div class="mb-3 rounded-lg input-group input-group-lg">
							<span class="input-group-text text-muted bg-input-chat pe-1 ps-3" id="basic-addon1">
								<i class="bx bx-search-alt"></i>
							</span>
							<input id="search-message_side_bar" placeholder="Buscar mensajes" type="text" class="form-control bg-input-chat" value="">
						</div>
					</div>

					<div class="mb-4 d-flex flex-row justify-content-between">
						<label id="all_side_bar" class="tab-chat me-1 w-100 active" for="option1">Todas</label>
						<label id="unread_side_bar" class="tab-chat me-1 w-100" for="option2">No leídas</label>
						<label id="read_side_bar" class="tab-chat me-1" for="option3">Leídos</label>
						<label id="delete_side_bar" class="tab-chat ms-1" for="option4">
							<i class='bx bx-trash'></i>
						</label>
					</div>
				</div>
				<div class="px-2">
					<div data-simplebar="init" class="chat-message-list" style="max-height: 100%;">
						<div class="simplebar-wrapper" style="margin: 0px;">
							<div class="simplebar-height-auto-observer-wrapper">
								<div class="simplebar-height-auto-observer"></div>
							</div>
							<div class="simplebar-mask">
								<div class="simplebar-offset" style="right: 0px; bottom: 0px;">
									<div class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content" style="height: 100%; overflow: hidden scroll;">
										<div class="simplebar-content" style="padding: 0px;">
											<ul id="chat-list-sidebar" class="list-unstyled chat-list chat-user-list"></ul>
										</div>
									</div>
								</div>
							</div>
							<div class="simplebar-placeholder" style="width: auto; height: 890px;"></div>
						</div>
						<div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
							<div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
						</div>
						<div class="simplebar-track simplebar-vertical" style="visibility: visible;">
							<div class="simplebar-scrollbar" style="height: 95px; transform: translate3d(0px, 0px, 0px); display: block;"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

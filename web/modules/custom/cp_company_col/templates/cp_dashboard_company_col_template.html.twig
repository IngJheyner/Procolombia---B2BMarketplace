<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="edit-company-sidebar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="alert_1Label"><img src="https://asesoftwaredevserver.evolutecc.com/sites/default/files/2022-08/Modal-Mensaje-Azul.svg" alt="" srcset="">{{ 'Administrator and Contact Information'|t }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row p-0 content px-4">
          <div class="col-sm-6 col-md-6">
            <div class="title">
              <p>{{ 'Contact name'|t }}</p>
            </div>
            <div class="contenido">
              <p>{{data.contact_name}}</p>
            </div>
          </div>
          <div class="col-sm-6 col-md-6">
            <div class="title">
              <p>{{ 'E-mail address'|t }}</p>
            </div>
            <div class="contenido">
              <p>{{data.contact_email}}</p>
            </div>
          </div>
        </div>
        <h6 class="px-4">{{ 'Edit Information'|t }}</h6>
        <div class="row px-4">
          <div class="col-md-12">
            <label for="contact_email" class="form-label">{{ 'E-mail address'|t }}
              <span>*</span>
            </label>
            <input type="email" class="form-control" id="contact_email" placeholder="">
          </div>
          <div class="col-md-12">
            <div class="form-group password">
              <label for="nit">{{ 'Password'|t }}
                <span>*</span>
              </label>
              <div class="input-group mb-3">
                <input type="password" id="password" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <span class="input-group-text">
                  <img id="pass_bloq" style="display:none" src="https://asesoftwaredevserver.evolutecc.com/sites/default/files/2022-08/Contraseña-Bloqueado.svg" alt="" srcset="">
                  <img id="pass_show" src="https://asesoftwaredevserver.evolutecc.com/sites/default/files/2022-08/Contraseña.svg" alt="" srcset="">
                </span>
                <div class="input_error">
                  <i id="error_password" class='bx bxs-info-circle toltip_i'>
                    <span id="error_password_message" class="tooltiptext_error">
                      {{ 'Required Field'|t }}
                    </span>
                  </i>
                </div>
              </div>

            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group password">
              <label for="nit">{{ 'Password verification'|t }}
                <span>*</span>
              </label>
              <div class="input-group mb-3">
                <input type="password" id="confirm_password" class="form-control" aria-describedby="basic-addon2">
                <span class="input-group-text">
                  <img id="pass_bloq_confirm" style="display:none" src="https://asesoftwaredevserver.evolutecc.com/sites/default/files/2022-08/Contraseña-Bloqueado.svg" alt="" srcset="">
                  <img id="pass_show_confirm" src="https://asesoftwaredevserver.evolutecc.com/sites/default/files/2022-08/Contraseña.svg" alt="" srcset="">
                </span>
                <div class="input_error">
                  <i id="error_confirm_password" class='bx bxs-info-circle toltip_i'>
                    <span id="error_confirm_password_message" class="tooltiptext_error">
                      {{ 'Required Field'|t }}
                    </span>
                  </i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-lg-12 continue">
            <button id="cancel_process_1" class="cancel" data-bs-dismiss="modal" aria-label="Close">{{ 'CANCEL'|t }}</button>
            <button id="save_modal" name="save_modal" aria-label="Continuar con el registro" class="continue">{{ 'CONTINUE'|t }}</button>
            <button style="display:none" class="continue" id="loading_1" type="button" disabled>
              <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
              {{ 'Loading...'|t }}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

